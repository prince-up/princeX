{
  "manifest_version": 3,
  "name": "PrinceX Screen Share",
  "version": "1.0.0",
  "description": "Enable screen sharing and remote control for PrinceX",
  "permissions": [
    "desktopCapture",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:5173/*",
    "http://localhost:5000/*",
    "https://*.vercel.app/*",
    "https://*.onrender.com/*",
    "https://*.railway.app/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost:5173/*",
        "https://*.vercel.app/*",
        "https://*.onrender.com/*",
        "https://*.railway.app/*"
      ],
      "js": ["content/content-script.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["content/content-script.js"],
      "matches": ["http://localhost:5173/*"]
    }
  ]
}
